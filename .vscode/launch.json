  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "REST API Server",
      "env": {
        "TS_NODE_FILES": "true"
      },
      "sourceMaps": true,
      "args": [
        "packages/restapi/src/scripts/startServer.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "protocol": "inspector",
      "console": "integratedTerminal"
    }
  ]
}